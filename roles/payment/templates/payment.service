[Unit]
Description=Payment Service

[Service]
User=root
WorkingDirectory=/app
CART_HOST={{ lookup('community.hashi_vault.hashi_vault', 'secret=roboshop-{{ ENV }}/payment:CART_HOST token={{ vault_token }} url=http://vault.azdevops2704.online:8200') }}
CART_PORT={{ lookup('community.hashi_vault.hashi_vault', 'secret=roboshop-{{ ENV }}/payment:CART_PORT token={{ vault_token }} url=http://vault.azdevops2704.online:8200') }}
USER_HOST={{ lookup('community.hashi_vault.hashi_vault', 'secret=roboshop-{{ ENV }}/payment:USER_HOST token={{ vault_token }} url=http://vault.azdevops2704.online:8200') }}
USER_PORT={{ lookup('community.hashi_vault.hashi_vault', 'secret=roboshop-{{ ENV }}/payment:USER_PORT token={{ vault_token }} url=http://vault.azdevops2704.online:8200') }}
AMQP_HOST={{ lookup('community.hashi_vault.hashi_vault', 'secret=roboshop-{{ ENV }}/payment:AMQP_HOST token={{ vault_token }} url=http://vault.azdevops2704.online:8200') }}
AMQP_USER={{ lookup('community.hashi_vault.hashi_vault', 'secret=roboshop-{{ ENV }}/payment:AMQP_USER token={{ vault_token }} url=http://vault.azdevops2704.online:8200') }}
AMQP_PASS={{ lookup('community.hashi_vault.hashi_vault', 'secret=roboshop-{{ ENV }}/payment:AMQP_PASS token={{ vault_token }} url=http://vault.azdevops2704.online:8200') }}

ExecStart=/usr/local/bin/uwsgi --ini payment.ini
ExecStop=/bin/kill -9 $MAINPID
SyslogIdentifier=payment

[Install]
WantedBy=multi-user.target